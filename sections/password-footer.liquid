<footer class="password-page__footer" role="contentinfo" id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="password-footer">
  <div class="wrapper">
    <ul class="inline-list text-center">

      <li>
        <p class="credentials text-small">
          <span class="text-small">&copy; {{ 'now' | date: '%Y' }} {{ shop.name | link_to: routes.root_url }}</span>
              {%- if shop.locale == 'de' -%}
                  {%- if section.settings.custom_credential != blank -%}
                  <span class="rte text-small"> | {{ section.settings.custom_credential | remove: '<p>' | remove: '</p>' }}</span>
                  {%- endif -%}
              {%- else -%}
                  {%- if section.settings.custom_credential_fr != blank -%}
                  <span class="rte text-small"> | {{ section.settings.custom_credential_fr | remove: '<p>' | remove: '</p>' }}</span>
                  {%- endif -%}
              {%- endif -%}
        </p>
      </li>
    </ul>
   <p class="language-selction text-center">
        	{%- if shop.locale == 'de' -%}
         	 <a href="/fr" class="lan"><img width="32" src="https://cdn.shopify.com/s/files/1/0549/2867/0813/files/fr-flag.svg?v=1636985832" alt="Anodyne.ch FR" />FR</a>
          {%- else -%}
      		<a href="/" class="lan"><img width="32" src="https://cdn.shopify.com/s/files/1/0549/2867/0813/files/de-flag.svg?v=1636985831" alt="Anodyne.ch DE" />DE</a>
          {%- endif -%}
        
        </p>
  </div>
</footer>

{% schema %}
  {
    "name": "Password footer",
    "class": "password-footer",
    "settings": [
    {
      "type": "richtext",
      "id": "custom_credential",
      "label": "Custom credential"
    },
    {
      "type": "richtext",
      "id": "custom_credential_fr",
      "label": "Custom credential FR"
    }
    ]
  }
{% endschema %}